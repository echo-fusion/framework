{
    "name": "echo-fusion/framework",
    "description": "EchoFusion is a lightweight and modular PHP framework designed for building scalable and maintainable applications with a focus on flexibility, ease of use, and performance.",
    "type": "project",
    "license": "MIT",
    "keywords": ["echoFusion", "framework"],
    "support": {
        "issues": "https://github.com/echo-fusion/framework/issues",
        "source": "https://github.com/echo-fusion/framework"
    },
    "authors": [
        {
            "name": "Amir Shadanfar",
            "email": "a.shadanfar.it@gmail.com"
        }
    ],
    "require": {
        "php": "~8.1.0 || ~8.2.0 || ~8.3.0",
        "ext-pdo": "*",
        "ext-simplexml": "*",
        "echo-fusion/servicemanager": "^1.0",
        "echo-fusion/routemanager": "^1.0",
        "echo-fusion/middlewaremanager": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "dev-master",
        "echo-fusion/codestandard": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "EchoFusion\\Framework\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EchoFusion\\Framework\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "@cs-check","@analyze","@phpunit"
        ],
        "phpunit": "vendor/bin/phpunit",
        "phpunit-coverage": "vendor/bin/phpunit --coverage-text",
        "cs-fix": "php-cs-fixer fix --config=.php-cs-fixer.dist.php",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "analyze": "psalm --show-info=false --no-cache --no-progress"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
